---
import Section from "./Section.astro"

interface Props {
  data: any;
}

const { data } = Astro.props
---

<Section title="Proyectos">
  <ul>
    {
      data.map(({ name, url, isActive, highlights, description }:any)=> {
        return (
          <li>
            <article>
              <header>
                <a href={url} title={`Ver el proyecto ${name}`} target="_blank" rel="noopener noreferrer">
                  <h3>{name}</h3>
                </a>
                <p>{description}</p>
              </header>
              <footer>
                  {
                    highlights.map((highlight: any) => {
                      return(
                        <span>{highlight}</span>
                      )
                    })
                  }
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>  
<Section />

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(200px, 1fr)
    );
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.15rem;
    margin-bottom: 8px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    font-size: 0.8rem;
  }

  footer span {
    border-radius: 1rem;
    background: #eee;
    color: #333;
    font-size: 0.65rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
  }
</style>