---
import Section from "./Section.astro"

interface Props {
  data: any;
  sectionTitle: string;
}

const { data, sectionTitle } = Astro.props
---
<Section title={sectionTitle} >
  <ul>
  {
    data.map(({ institution, area, startDate, endDate, studyType}:any) => {
      const workPeriod = `${startDate} - ${endDate}`
      return (
        <li>
          <article>
            <header>
              <div>
                <h3>{institution}</h3>
                <h4>{area}</h4>
              </div>
              <time>{workPeriod}</time>
            </header>
            <footer>
              <p>{studyType}</p>
            </footer>
          </article>
        </li>
      )
    })
  }
  </ul>
<Section />

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    font-size: .85rem;
    color: #555;
  }
</style>