---
import Section from "./Section.astro"

import { skills } from "@cv"
---
<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
<Section />

<style>
  ul {
    display: inline-flex;
    gap: .35rem;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: #000;
    font-size: .75rem;
    font-weight: 500;
    padding: .25rem .75rem;
  }
</style>